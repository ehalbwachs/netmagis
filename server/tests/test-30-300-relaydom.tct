set uri /netmagis/relaydoms

set urihost /netmagis/hosts

test-reset-cookie

#########################################################################
lassign [test-call GET $uri {}] stcode stmsg ct body
test-assert 10 "Get relaydoms without auth -> error" \
	{$stcode == 401}

#########################################################################
test-set-cookie session t2-simple

lassign [test-call GET $uri {}] stcode stmsg ct body
test-assert 20 "Get relaydoms for a non-admin user -> error" \
	{$stcode == 403}


test-set-cookie session t1-wheel

